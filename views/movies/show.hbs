{{#with show}}
  <h2>Details for {{title}}</h2>
  <p>Genre: {{genre}}</p>
  <p>Plot: {{plot}}</p>
  <h3>Cast: </h3>
    {{#each cast}}
      <p>{{name}}</p>
    {{/each}}

  <form action="/movies/{{_id}}/edit" method="GET">
    <button type="submit">Edit this movie</button>
  </form>
{{/with}}

  
  